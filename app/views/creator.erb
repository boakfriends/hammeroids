<html>
  <head>
    <title>Entity Creator</title>
    <%= partial "layout/css" %>
  <style>
    canvas{
      border: 1px solid black;
    }
    .screen{
      position: relative;
    }
    .coordsbox{
      display: inline-block;
      position: absolute;
    }
  </style>
  </head>

  <body>
    <h2>Entity Creator</h2>
    <div class="toolbar">
    <input value="draw" type="radio" name="draw_mode" checked>
    <label for="draw">Draw</label>
    <input value="edit" type="radio" name="draw_mode">
    <label for="edit">Edit</label>
    <input value="delete" type="radio" name="draw_mode">
    <label for="delete">Delete</label>
    </div>
    <div class="screen">
      <canvas id="canvas"></canvas>
      <div class="coordsbox">
        <span>Coords:</span>
        <br>
        <span id="coords">[]</span>
      </div>
  </div>
    <script type="text/javascript" src="<%= settings.pack_location %>creator.js" ></script>
  </body>
</html>
